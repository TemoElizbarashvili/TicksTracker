<Window x:Class="ExeTickTracker.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExeTickTracker.UI"
        xmlns:helpers="clr-namespace:ExeTickTracker.UI.Helpers"
        mc:Ignorable="d"
        Title="TickTracker"
        Height="600"
        Width="1000"
        MinWidth="1000"
        MinHeight="650"
        WindowStyle="None"
        ResizeMode="CanResize">

    <Window.Resources>
        <helpers:SecondsToHeightConverter x:Key="SecondsToHeightConverter" />

        <Style x:Key="ThinScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="{DynamicResource AppRowAlternateBackgroundBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="Root" Background="{TemplateBinding Background}">
                            <Track x:Name="PART_Track"
                                   IsDirectionReversed="true"
                                   Focusable="false">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb"
                                           Background="{DynamicResource AppAccentBrush}">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Vertical">
                                <Setter TargetName="Root" Property="Width" Value="8"/>
                            </Trigger>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter TargetName="Root" Property="Height" Value="8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomCalendarStyle" TargetType="{x:Type Calendar}">
            <Setter Property="Background" Value="{DynamicResource AppContentBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}"/>
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>

        <Style x:Key="CustomDatePickerTextBoxStyle" TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="SelectionBrush" Value="{DynamicResource AppAccentBrush}" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePickerTextBox">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Padding="4,2">
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              VerticalContentAlignment="Center"
                                              HorizontalContentAlignment="Stretch" />
                            </Border>
                            <TextBlock x:Name="Watermark"
                                       Text="Select date"
                                       Foreground="{DynamicResource AppSecondaryTextBrush}"
                                       VerticalAlignment="Center"
                                       Margin="4,0,0,0"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomDatePickerButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource AppSecondaryTextBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="Transparent">
                            <Path Data="M0,0 H14 V14 H0 Z M0,2 H14 M3,0 V4 M11,0 V4"
                                  Stroke="{TemplateBinding Foreground}"
                                  StrokeThickness="1.5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Width="14" Height="14"
                                  SnapsToDevicePixels="True"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type DatePicker}">
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}"/>
            <Setter Property="Background" Value="{DynamicResource AppContentBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CalendarStyle" Value="{StaticResource CustomCalendarStyle}"/>
            <Setter Property="IsTodayHighlighted" Value="True"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DatePicker}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <DatePickerTextBox x:Name="PART_TextBox"
                                                   Grid.Column="0"
                                                   Style="{StaticResource CustomDatePickerTextBoxStyle}" 
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Stretch"/>

                                <Button x:Name="PART_Button"
                                        Grid.Column="1"
                                        Style="{StaticResource CustomDatePickerButtonStyle}"
                                        Focusable="False"
                                        VerticalAlignment="Stretch"/>

                                <Popup x:Name="PART_Popup"
                                       AllowsTransparency="True"
                                       Placement="Bottom"
                                       StaysOpen="False"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource AppAccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" 
                        Grid.ColumnSpan="2"
                        CornerRadius="2"
                        Background="{DynamicResource AppContentBackgroundBrush}"
                        BorderBrush="{DynamicResource AppBorderBrush}"
                        BorderThickness="1" />
                <Path x:Name="Arrow" 
                      Grid.Column="1" 
                      Fill="{DynamicResource AppSecondaryTextBrush}"
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"
                      Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z" />
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AppAccentBrush}" />
                    <Setter TargetName="Arrow" Property="Fill" Value="{DynamicResource AppPrimaryTextBrush}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <ControlTemplate x:Key="FlatComboBoxTemplate" TargetType="ComboBox">
            <Grid>
                <ToggleButton Name="ToggleButton" 
                              Template="{StaticResource ComboBoxToggleButton}" 
                              Grid.Column="2" 
                              Focusable="false"
                              IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                              ClickMode="Press"/>
                <ContentPresenter Name="ContentSite"
                                  IsHitTestVisible="False" 
                                  Content="{TemplateBinding SelectionBoxItem}"
                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                  Margin="6,3,23,3"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left" />
                <Popup Name="Popup"
                       Placement="Bottom"
                       IsOpen="{TemplateBinding IsDropDownOpen}"
                       AllowsTransparency="True" 
                       Focusable="False"
                       PopupAnimation="Slide">
                    <Grid Name="DropDown"
                          SnapsToDevicePixels="True"
                          MinWidth="{TemplateBinding ActualWidth}"
                          MaxHeight="{TemplateBinding MaxDropDownHeight}">
                        <Border x:Name="DropDownBorder"
                                Background="{DynamicResource AppContentBackgroundBrush}"
                                BorderThickness="1"
                                BorderBrush="{DynamicResource AppBorderBrush}"/>
                        <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                        </ScrollViewer>
                    </Grid>
                </Popup>
            </Grid>
        </ControlTemplate>

        <Style TargetType="ComboBox">
            <Setter Property="Template" Value="{StaticResource FlatComboBoxTemplate}"/>
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AppAccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AppBorderBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource AppSecondaryTextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                Background="Transparent"
                                BorderBrush="{DynamicResource AppBorderBrush}"
                                BorderThickness="0 0 0 3"
                                Margin="0 0 16 0"
                                Padding="12 8">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AppAccentBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource AppAccentBrush}" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="{DynamicResource AppContentBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="{DynamicResource AppContentBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource AppPrimaryTextBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AppAccentBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AppRowAlternateBackgroundBrush}"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="{DynamicResource AppAccentBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="26"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource AppSecondaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button" >
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background"
                                        Value="{DynamicResource AppRowAlternateBackgroundBrush}"/>
                                <Setter Property="Foreground"
                                        Value="{DynamicResource AppPrimaryTextBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background"
                                        Value="{DynamicResource AppBorderBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <DockPanel Margin="0" Background="{DynamicResource AppWindowBackgroundBrush}">

        <Border DockPanel.Dock="Top"
                Padding="5 4 4 0"
                Background="{DynamicResource AppHeaderBackgroundBrush}"
                BorderBrush="{DynamicResource AppBorderBrush}"
                BorderThickness="0 0 0 1"
                MouseLeftButtonDown="HeaderBar_OnMouseLeftButtonDown">
            <StackPanel>
                <DockPanel LastChildFill="False">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <Border Width="24"
                                Height="24"
                                CornerRadius="20"
                                Background="{DynamicResource AppContentBackgroundBrush}"
                                Margin="0 0 8 0" >
                            <Image Width="25"
                                   Height="25"
                                   Source="/Assets/TickTracker.png"
                                   SnapsToDevicePixels="True" />
                        </Border>
                        <TextBlock Text="TickTracker"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   VerticalAlignment="Top"
                                   Foreground="{DynamicResource AppPrimaryTextBrush}" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical"
                                DockPanel.Dock="Right"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0 0 15 0"
                                    DockPanel.Dock="Right"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                            <Button Style="{StaticResource WindowControlButtonStyle}"
                                    Click="MinimizeButton_OnClick"
                                    ToolTip="Minimize">
                                <TextBlock Text="&#x2013;" FontSize="17"/>
                            </Button>
                            <Button Style="{StaticResource WindowControlButtonStyle}"
                                    Click="MaximizeButton_OnClick"
                                    ToolTip="Maximize / Restore">
                                <TextBlock Text="&#x25A1;" FontSize="16" />
                            </Button>
                            <Button Style="{StaticResource WindowControlButtonStyle}"
                                    Click="CloseButton_OnClick"
                                    ToolTip="Close">
                                <TextBlock Text="&#x2715;" FontSize="16"/>
                            </Button>
                        </StackPanel>

                        <StackPanel 
                            Orientation="Horizontal"
                            Margin="0 10 0 0">
                            <TextBlock Text="Theme:"
                                   VerticalAlignment="Center"
                                   Margin="0 0 8 0"
                                   Foreground="{DynamicResource AppSecondaryTextBrush}" />
                            <ComboBox x:Name="ThemeCombo"
                                  Width="100"
                                  Margin="0 0 12 0"
                                  SelectedIndex="0"
                                  SelectionChanged="ThemeCombo_OnSelectionChanged">
                                <ComboBoxItem Content="Light" Tag="Light" IsSelected="True" />
                                <ComboBoxItem Content="Dark" Tag="Dark" />
                                <ComboBoxItem Content="Night" Tag="Night" />
                            </ComboBox>

                            <Button x:Name="RefreshButton"
                                Click="RefreshButton_OnClick"
                                Padding="8 4"
                                Background="{DynamicResource AppContentBackgroundBrush}"
                                Foreground="{DynamicResource AppPrimaryTextBrush}"
                                BorderBrush="{DynamicResource AppBorderBrush}"
                                ToolTip="Reload usage data">
                                <StackPanel Orientation="Horizontal"
                                          VerticalAlignment="Center">
                                    <TextBlock Text="⟳"
                                           FontSize="14"
                                           Margin="0 0 6 0" />
                                    <TextBlock Text="Refresh"
                                             VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </DockPanel>

                <WrapPanel Margin="0 16 0 0">
                    <StackPanel Orientation="Horizontal" Margin="0 0 16 8">
                        <TextBlock Text="Search:"
                                   VerticalAlignment="Center"
                                   Margin="0 0 8 0"
                                   Foreground="{DynamicResource AppSecondaryTextBrush}" />
                        <TextBox x:Name="SearchBox"
                                 Width="200"
                                 Padding="4"
                                 Background="{DynamicResource AppContentBackgroundBrush}"
                                 Foreground="{DynamicResource AppPrimaryTextBrush}"
                                 BorderBrush="{DynamicResource AppBorderBrush}"
                                 TextChanged="SearchBox_OnTextChanged" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 0 16 8">
                        <TextBlock Text="Min minutes:"
                                   VerticalAlignment="Center"
                                   Margin="0 0 8 0"
                                   Foreground="{DynamicResource AppSecondaryTextBrush}" />
                        <TextBox x:Name="MinMinutesBox"
                                 Width="60"
                                 Padding="4"
                                 Text="1"
                                 Background="{DynamicResource AppContentBackgroundBrush}"
                                 Foreground="{DynamicResource AppPrimaryTextBrush}"
                                 BorderBrush="{DynamicResource AppBorderBrush}"
                                 TextChanged="MinMinutesBox_OnTextChanged" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 0 16 8">
                        <TextBlock Text="Min sessions:"
                                   VerticalAlignment="Center"
                                   Margin="0 0 8 0"
                                   Foreground="{DynamicResource AppSecondaryTextBrush}" />
                        <TextBox x:Name="MinSessionsBox"
                                 Width="60"
                                 Padding="4"
                                 Text="0"
                                 Background="{DynamicResource AppContentBackgroundBrush}"
                                 Foreground="{DynamicResource AppPrimaryTextBrush}"
                                 BorderBrush="{DynamicResource AppBorderBrush}"
                                 TextChanged="MinSessionsBox_OnTextChanged" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                        <TextBlock Text="Last used:"
                                   VerticalAlignment="Center"
                                   Margin="0 0 8 0"
                                   Foreground="{DynamicResource AppSecondaryTextBrush}" />
                        <ComboBox x:Name="LastUsedCombo"
                                  Width="140"
                                  SelectedIndex="0"
                                  SelectionChanged="LastUsedCombo_OnSelectionChanged">
                            <ComboBoxItem Content="Any time" Tag="Any" IsSelected="True" />
                            <ComboBoxItem Content="Today" Tag="Today" />
                            <ComboBoxItem Content="Last 7 days" Tag="7" />
                            <ComboBoxItem Content="Last 30 days" Tag="30" />
                        </ComboBox>
                    </StackPanel>
                </WrapPanel>

                <TextBlock x:Name="SummaryText"
                           Margin="0 4 0 0"
                           Foreground="{DynamicResource AppSecondaryTextBrush}"
                           FontSize="12"
                           Text="Ready" />
            </StackPanel>
        </Border>

        <TabControl Margin="16">
            <TabItem Header="Summary">
                <Border CornerRadius="0 4 4 4"
                        Background="{DynamicResource AppContentBackgroundBrush}"
                        Padding="24">
                    <StackPanel>
                        <TextBlock Text="Overview"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource AppPrimaryTextBrush}" />
                        <TextBlock Text="High-level stats across all tracked apps"
                                   Margin="0,4,0,20"
                                   Foreground="{DynamicResource AppSecondaryTextBrush}"
                                   FontSize="14" />

                        <UniformGrid Columns="3" Margin="0,0,0,12">
                            <Border Margin="0,0,12,0"
                                    Padding="16"
                                    CornerRadius="8"
                                    Background="{DynamicResource AppWindowBackgroundBrush}"
                                    BorderBrush="{DynamicResource AppBorderBrush}"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Total tracked time"
                                               FontSize="13"
                                               Foreground="{DynamicResource AppSecondaryTextBrush}" />
                                    <TextBlock x:Name="SummaryTotalTimeText"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               Margin="0 4 0 0"
                                               Foreground="{DynamicResource AppPrimaryTextBrush}" />
                                </StackPanel>
                            </Border>

                            <Border Margin="6,0"
                                    Padding="16"
                                    CornerRadius="8"
                                    Background="{DynamicResource AppWindowBackgroundBrush}"
                                    BorderBrush="{DynamicResource AppBorderBrush}"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Tracked apps"
                                               FontSize="13"
                                               Foreground="{DynamicResource AppSecondaryTextBrush}" />
                                    <TextBlock x:Name="SummaryAppCountText"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               Margin="0 4 0 0"
                                               Foreground="{DynamicResource AppPrimaryTextBrush}" />
                                </StackPanel>
                            </Border>

                            <Border Margin="12,0,0,0"
                                    Padding="16"
                                    CornerRadius="8"
                                    Background="{DynamicResource AppWindowBackgroundBrush}"
                                    BorderBrush="{DynamicResource AppBorderBrush}"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Top app (all time)"
                                               FontSize="13"
                                               Foreground="{DynamicResource AppSecondaryTextBrush}" />
                                    <TextBlock x:Name="SummaryTopAppText"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Margin="0 4 0 0"
                                               TextTrimming="CharacterEllipsis"
                                               Foreground="{DynamicResource AppPrimaryTextBrush}" />
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                    </StackPanel>
                </Border>
            </TabItem>

            <TabItem Header="Table">
                <Border Background="{DynamicResource AppContentBackgroundBrush}"
                        Padding="0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ScrollViewer.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource ThinScrollBar}" />
                        </ScrollViewer.Resources>
                        <StackPanel>
                            <DataGrid x:Name="UsageGrid"
                                      IsReadOnly="True"
                                      AutoGenerateColumns="False"
                                      CanUserSortColumns="True"
                                      HeadersVisibility="Column"
                                      AlternationCount="2"
                                      Margin="0 10 0 0"
                                      BorderThickness="0"
                                      RowBackground="Transparent"
                                      AlternatingRowBackground="Transparent"
                                      GridLinesVisibility="All"
                                      HorizontalGridLinesBrush="{DynamicResource AppBorderBrush}"
                                      VerticalGridLinesBrush="{DynamicResource AppBorderBrush}"
                                  MouseDoubleClick="UsageGrid_OnMouseDoubleClick"
                                  PreviewMouseWheel="UsageGrid_OnPreviewMouseWheel"
                                  FontSize="13"
                                  RowHeight="32"
                                  Background="{DynamicResource AppContentBackgroundBrush}"
                                  Foreground="{DynamicResource AppPrimaryTextBrush}"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{DynamicResource AppContentBackgroundBrush}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource AppSecondaryTextBrush}"/>
                                        <Setter Property="Padding" Value="8,6"/>
                                        <Setter Property="BorderThickness" Value="0,0,2,3"/>
                                        <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridColumnHeader">
                                                    <Grid>
                                                        <Border Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}">
                                                            <Grid>
                                                                <ContentPresenter Margin="{TemplateBinding Padding}"
                                                                                  VerticalAlignment="Center"
                                                                                  HorizontalAlignment="Stretch"
                                                                                  RecognizesAccessKey="True"/>
                                                                <TextBlock x:Name="SortArrow"
                                                                           FontSize="10"
                                                                           Margin="4,0,4,0"
                                                                           HorizontalAlignment="Right"
                                                                           VerticalAlignment="Center"
                                                                           Foreground="{TemplateBinding Foreground}"
                                                                           Visibility="Collapsed"/>
                                                            </Grid>
                                                        </Border>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="SortDirection" Value="Ascending">
                                                            <Setter TargetName="SortArrow" Property="Text" Value="▲"/>
                                                            <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                                                        </Trigger>
                                                        <Trigger Property="SortDirection" Value="Descending">
                                                            <Setter TargetName="SortArrow" Property="Text" Value="▼"/>
                                                            <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="SortDirection" Value="Ascending">
                                                <Setter Property="Foreground" Value="{DynamicResource AppAccentBrush}"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Trigger>
                                            <Trigger Property="SortDirection" Value="Descending">
                                                <Setter Property="Foreground" Value="{DynamicResource AppAccentBrush}"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Process"
                                                        Binding="{Binding ProcessName}"
                                                        Width="*"
                                                        MinWidth="220" />
                                    <DataGridTextColumn Header="Total Time"
                                                        Binding="{Binding TotalHoursDisplay}"
                                                        SortMemberPath="TotalSeconds"
                                                        Width="120" />
                                    <DataGridTextColumn Header="Sessions"
                                                        Binding="{Binding SessionCount}"
                                                        SortMemberPath="SessionCount"
                                                        Width="100" />
                                    <DataGridTextColumn Header="First Seen"
                                                        Binding="{Binding FirstSeenLocal}"
                                                        SortMemberPath="FirstSeenUtc"
                                                        Width="180" />
                                    <DataGridTextColumn Header="Last Seen"
                                                        Binding="{Binding LastSeenLocal}"
                                                        SortMemberPath="LastSeenUtc"
                                                        Width="180" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <Button x:Name="LoadMoreButton"
                                    Content="Load more"
                                    Margin="0,4,0,8"
                                    Padding="16,6"
                                    HorizontalAlignment="Center"
                                    Background="{DynamicResource AppWindowBackgroundBrush}"
                                    Foreground="{DynamicResource AppPrimaryTextBrush}"
                                    BorderBrush="{DynamicResource AppBorderBrush}"
                                    Click="LoadMoreButton_OnClick"
                                    Visibility="Collapsed" />
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <TabItem Header="Date Range">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top"
                                  Orientation="Horizontal"
                                  HorizontalAlignment="Center"
                                  Margin="0 10 0 8">
                        <TextBlock Text="From:"
                                     VerticalAlignment="Center"
                                     Margin="5 0 4 0"
                                     Foreground="{DynamicResource AppPrimaryTextBrush}" />
                        <DatePicker x:Name="RangeFromPicker"
                                        Width="140"
                                        Margin="0 0 12 0"
                                        VerticalAlignment="Center"
                                        SelectedDateChanged="RangeFromPicker_OnSelectedDateChanged" />

                        <CheckBox x:Name="RangeIsSpanCheckBox"
                                      Content="Use range"
                                      VerticalAlignment="Center"
                                      Margin="10 0 8 0"
                                      Foreground="{DynamicResource AppPrimaryTextBrush}"
                                      Checked="RangeIsSpanCheckBox_OnCheckedChanged"
                                      Unchecked="RangeIsSpanCheckBox_OnCheckedChanged" />

                        <TextBlock Text="To:"
                                       VerticalAlignment="Center"
                                       Margin="10 0 4 0"
                                       Foreground="{DynamicResource AppPrimaryTextBrush}" />
                        <DatePicker x:Name="RangeToPicker"
                                        Width="140"
                                        Margin="0 0 12 0"
                                        VerticalAlignment="Center"
                                        IsEnabled="False"
                                        SelectedDateChanged="RangeToPicker_OnSelectedDateChanged" />

                        <TextBlock Text="Search:"
                                     VerticalAlignment="Center"
                                     Margin="10 0 4 0"
                                     Foreground="{DynamicResource AppPrimaryTextBrush}" />
                        <TextBox x:Name="RangeSearchBox"
                                     Width="160"
                                     Margin="0 0 12 0"
                                     TextChanged="RangeSearchBox_OnTextChanged" />
                    </StackPanel>

                    <Border Background="{DynamicResource AppContentBackgroundBrush}"
                              Padding="0">
                        <DataGrid x:Name="RangeGrid"
                                    IsReadOnly="True"
                                    AutoGenerateColumns="False"
                                    CanUserSortColumns="True"
                                    HeadersVisibility="Column"
                                    AlternationCount="2"
                                    BorderThickness="0"
                                    RowBackground="Transparent"
                                    AlternatingRowBackground="Transparent"
                                    GridLinesVisibility="All"
                                    HorizontalGridLinesBrush="{DynamicResource AppBorderBrush}"
                                    VerticalGridLinesBrush="{DynamicResource AppBorderBrush}"
                                    FontSize="13"
                                    RowHeight="32"
                                    Background="{DynamicResource AppContentBackgroundBrush}"
                                    Foreground="{DynamicResource AppPrimaryTextBrush}">
                            <DataGrid.Resources>
                                <Style TargetType="ScrollBar" BasedOn="{StaticResource ThinScrollBar}" />
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{DynamicResource AppContentBackgroundBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource AppSecondaryTextBrush}"/>
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridColumnHeader">
                                                <Grid>
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}">
                                                        <Grid>
                                                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                                                              VerticalAlignment="Center"
                                                                              HorizontalAlignment="Stretch"
                                                                              RecognizesAccessKey="True"/>
                                                            <TextBlock x:Name="SortArrow"
                                                                       FontSize="10"
                                                                       Margin="4,0,4,0"
                                                                       HorizontalAlignment="Right"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="{TemplateBinding Foreground}"
                                                                       Visibility="Collapsed"/>
                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="SortDirection" Value="Ascending">
                                                        <Setter TargetName="SortArrow" Property="Text" Value="▲"/>
                                                        <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                                                    </Trigger>
                                                    <Trigger Property="SortDirection" Value="Descending">
                                                        <Setter TargetName="SortArrow" Property="Text" Value="▼"/>
                                                        <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="SortDirection" Value="Ascending">
                                            <Setter Property="Foreground" Value="{DynamicResource AppAccentBrush}"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="SortDirection" Value="Descending">
                                            <Setter Property="Foreground" Value="{DynamicResource AppAccentBrush}"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Process"
                                                      Binding="{Binding ProcessName}"
                                                      Width="*"
                                                      MinWidth="220" />
                                <DataGridTextColumn Header="Total Time"
                                                      Binding="{Binding TotalHoursDisplay}"
                                                      SortMemberPath="TotalSeconds"
                                                      Width="120" />
                                <DataGridTextColumn Header="Sessions"
                                                      Binding="{Binding SessionCount}"
                                                      SortMemberPath="SessionCount"
                                                      Width="100" />
                                <DataGridTextColumn Header="First Seen"
                                                      Binding="{Binding FirstSeenLocal}"
                                                      SortMemberPath="FirstSeenUtc"
                                                      Width="180" />
                                <DataGridTextColumn Header="Last Seen"
                                                      Binding="{Binding LastSeenLocal}"
                                                      SortMemberPath="LastSeenUtc"
                                                      Width="180" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </DockPanel>
            </TabItem>

            <TabItem Header="Top 10 Chart">
                <Border Background="{DynamicResource AppContentBackgroundBrush}"
                        Padding="24">
                    <Grid>
                        <Grid Margin="0,12,0,32"
                              VerticalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.Column="0"
                                       Fill="{DynamicResource AppSecondaryTextBrush}"
                                       Opacity="0.03" />
                            <Rectangle Grid.Column="1"
                                       Fill="{DynamicResource AppSecondaryTextBrush}"
                                       Opacity="0.05" />
                            <Rectangle Grid.Column="2"
                                       Fill="{DynamicResource AppSecondaryTextBrush}"
                                       Opacity="0.03" />
                            <Rectangle Grid.Column="3"
                                       Fill="{DynamicResource AppSecondaryTextBrush}"
                                       Opacity="0.05" />
                        </Grid>

                        <ItemsControl x:Name="ChartItems"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Stretch"
                                      Margin="0,4,0,16"
                                      Panel.ZIndex="1">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="8,4"
                                                Width="64"
                                                ToolTip="{Binding ProcessName}">
                                        <Grid Height="200"
                                              Margin="0,4,0,8">
                                            <Border VerticalAlignment="Bottom"
                                                    Background="{DynamicResource AppAccentBrush}"
                                                    CornerRadius="4"
                                                    Width="48">
                                                <Border.Height>
                                                    <MultiBinding Converter="{StaticResource SecondsToHeightConverter}">
                                                        <Binding Path="TotalSeconds" />
                                                        <Binding Path="MaxTotalSeconds"
                                                                 RelativeSource="{RelativeSource AncestorType=Window}" />
                                                    </MultiBinding>
                                                </Border.Height>
                                            </Border>
                                        </Grid>
                                        <TextBlock Text="{Binding ProcessName}"
                                                   FontSize="11"
                                                   TextAlignment="Center"
                                                   Foreground="{DynamicResource AppPrimaryTextBrush}"
                                                   TextTrimming="CharacterEllipsis" />
                                        <TextBlock Text="{Binding TotalHoursDisplay}"
                                                   FontSize="11"
                                                   TextAlignment="Center"
                                                   Foreground="{DynamicResource AppSecondaryTextBrush}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </TabItem>

            <TabItem Header="Settings">
                <Border Background="{DynamicResource AppContentBackgroundBrush}"
                        Padding="24">
                    <StackPanel>
                        <TextBlock Text="Settings"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource AppPrimaryTextBrush}" />
                        <TextBlock Text="Control data retention and sampling rate used by the tracker."
                                   Margin="0,4,0,24"
                                   Foreground="{DynamicResource AppSecondaryTextBrush}"
                                   FontSize="14" />

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="Retention window (days):"
                                       VerticalAlignment="Center"
                                       Width="160"
                                       Foreground="{DynamicResource AppPrimaryTextBrush}" />
                            <TextBox x:Name="RetentionDaysBox"
                                     Width="80"
                                     Padding="4"
                                     Margin="10 0 0 0"
                                     Text="90"
                                     Background="{DynamicResource AppContentBackgroundBrush}"
                                     Foreground="{DynamicResource AppPrimaryTextBrush}"
                                     BorderBrush="{DynamicResource AppBorderBrush}"
                                     PreviewTextInput="RetentionDaysBox_OnPreviewTextInput"
                                     LostFocus="RetentionDaysBox_OnLostFocus" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="Sampling accuracy:"
                                       VerticalAlignment="Center"
                                       Width="160"
                                       Foreground="{DynamicResource AppPrimaryTextBrush}" />
                            <ComboBox x:Name="AccuracyCombo"
                                      Width="180"
                                      SelectionChanged="AccuracyCombo_OnSelectionChanged">
                                <ComboBoxItem Content="High (1s polling)" Tag="1" />
                                <ComboBoxItem Content="Normal (2s polling)" Tag="2" IsSelected="True" />
                                <ComboBoxItem Content="Low (5s polling)" Tag="5" />
                            </ComboBox>
                        </StackPanel>

                        <Border Margin="0,24,0,0" 
                                Padding="12" 
                                Background="{DynamicResource AppWindowBackgroundBrush}" 
                                BorderBrush="{DynamicResource AppBorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="4">
                            <StackPanel>
                                <TextBlock Text="Note" FontWeight="Bold" Foreground="{DynamicResource AppSecondaryTextBrush}" FontSize="12"/>
                                <TextBlock Text="Changes are applied the next time the tracker process starts."
                                           Margin="0,4,0,0"
                                           Foreground="{DynamicResource AppSecondaryTextBrush}"
                                           FontSize="12" />
                                <TextBlock x:Name="CurrentConfigText"
                                           Margin="0,4,0,0"
                                           Foreground="{DynamicResource AppSecondaryTextBrush}"
                                           FontSize="12" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
